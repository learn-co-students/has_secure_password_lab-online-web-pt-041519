<h2>Please login below!</h2>
<%= form_for(@user, url: login_path, method: :post) do |f| %>
    <%= f.text_field :name %><br><br>
    <%= f.text_field :password %><br><br>
    <%= f.submit "Login" %>
<% end %>

<h4>Don't have an account? <%= link_to "Create an account here!", new_user_path %></h4>
