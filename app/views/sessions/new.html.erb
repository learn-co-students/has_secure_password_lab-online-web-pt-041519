<h1>Log In</h1>

<% if flash[:error] %>
  <div class="notice"><%= flash[:error] %></div>
<% end %>

<%= form_for @user, url: login_path, method: :post do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "Log in" %>
  </div>
<% end %>