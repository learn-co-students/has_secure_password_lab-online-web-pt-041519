<h1>Sign Up</h1>
<% if flash[:error] %>
  <div class="notice"><%= flash[:error] %></div>
<% end %>

<%= form_for @user, controller: 'users', action: 'create' do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.submit "create" %>
  </div>
<% end %>
