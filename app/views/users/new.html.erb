<h2>Create User</h2>

<% if flash[:notices] %>
  <% flash[:notices].each do |n| %>
    <div style = "color: red"><%= n %></div>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit %>
<% end %>
